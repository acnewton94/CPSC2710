<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Group?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.shape.Rectangle?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="edu.au.cpsc.miscstyle.Part1Controller"
            stylesheets="@style/main.css"
            styleClass="background"
            prefHeight="390.0" prefWidth="517.0">

    <top>
        <GridPane BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="70.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="70.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="70.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="70.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Rectangle arcHeight="5.0" arcWidth="5.0" fill="DODGERBLUE" height="50.0"
                           stroke="BLACK" strokeType="INSIDE" width="50.0"
                           styleClass="foreground" GridPane.halignment="CENTER" GridPane.valignment="CENTER"/>
                <Rectangle arcHeight="5.0" arcWidth="5.0" fill="DODGERBLUE" height="50.0"
                           stroke="BLACK" strokeType="INSIDE" width="50.0"
                           styleClass="highlight" GridPane.columnIndex="1"
                           GridPane.halignment="CENTER" GridPane.valignment="CENTER"/>
                <Rectangle arcHeight="5.0" arcWidth="5.0" fill="DODGERBLUE" height="50.0"
                           stroke="BLACK" strokeType="INSIDE" width="50.0"
                           styleClass="accent" GridPane.columnIndex="2"
                           GridPane.halignment="CENTER" GridPane.valignment="CENTER"/>
            </children>
        </GridPane>
    </top>

    <center>
        <VBox BorderPane.alignment="CENTER">
            <children>
                <Group>
                    <children>
                        <Circle layoutX="215.0" layoutY="24.0" radius="33.0"
                                fill="DODGERBLUE" stroke="BLACK" strokeType="INSIDE"/>
                        <Rectangle y="-30.0" layoutX="150.0" width="137.0" height="115.0"
                                   arcHeight="5.0" arcWidth="5.0"
                                   fill="DODGERBLUE" stroke="BLACK" strokeType="INSIDE"/>
                    </children>
                    <VBox.margin>
                        <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
                    </VBox.margin>
                </Group>

                <HBox spacing="10.0">
                    <children>
                        <VBox prefWidth="100.0" prefHeight="200.0">
                            <children>
                                <Hyperlink text="Google" visited="true"/>
                                <Hyperlink text="Duck, Duck, Go"/>
                                <Hyperlink text="Bing" visited="true"/>
                            </children>
                        </VBox>
                        <ComboBox prefWidth="150.0"/>
                        <Label text="Label" styleClass="arrow-button"/>
                        <Label text="Label" styleClass="arrow"/>
                        <CheckBox text="CheckBox" selected="true" mnemonicParsing="false"/>
                    </children>
                    <VBox.margin>
                        <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
                    </VBox.margin>
                </HBox>
            </children>
        </VBox>
    </center>

    <bottom>
        <HBox id="button-row" BorderPane.alignment="CENTER">
            <children>
                <Button text="Cancel" mnemonicParsing="false"/>
                <Button text="Help" mnemonicParsing="false"/>
                <Button text="Save" mnemonicParsing="false"/>
            </children>
            <BorderPane.margin>
                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
            </BorderPane.margin>
        </HBox>
    </bottom>

</BorderPane>
