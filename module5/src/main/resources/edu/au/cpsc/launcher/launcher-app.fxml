<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<GridPane id="root-grid"
          xmlns="http://javafx.com/javafx/17"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="edu.au.cpsc.launcher.LauncherController"
          hgap="24.0" vgap="24.0"
          alignment="CENTER">

    <columnConstraints>
        <ColumnConstraints percentWidth="50.0" halignment="CENTER"/>
        <ColumnConstraints percentWidth="50.0" halignment="CENTER"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>
        <RowConstraints/>
    </rowConstraints>

    <padding>
        <Insets top="24.0" right="24.0" bottom="24.0" left="24.0"/>
    </padding>

    <children>
        <Button text="Airports"           id="airports-btn"
                GridPane.rowIndex="0" GridPane.columnIndex="0"
                GridPane.hgrow="ALWAYS" maxWidth="Infinity"/>
        <Button text="Seat Reservation"   id="seat-reservation-btn"
                GridPane.rowIndex="0" GridPane.columnIndex="1"
                GridPane.hgrow="ALWAYS" maxWidth="Infinity"/>
        <Button text="Flight Schedule"    id="flight-schedule-btn"
                GridPane.rowIndex="1" GridPane.columnIndex="0"
                GridPane.hgrow="ALWAYS" maxWidth="Infinity"/>
        <Button text="Aircraft"           id="aircraft-btn"
                GridPane.rowIndex="1" GridPane.columnIndex="1"
                GridPane.hgrow="ALWAYS" maxWidth="Infinity"/>
    </children>
</GridPane>
