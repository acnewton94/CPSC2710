<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.web.WebView?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="edu.au.cpsc.module3.AirportController"
            prefWidth="860.0" prefHeight="520.0">


    <left>
        <GridPane hgap="8" vgap="8" prefWidth="340.0" BorderPane.alignment="TOP_LEFT">
            <padding><Insets top="14" right="12" bottom="14" left="14"/></padding>
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" minWidth="90" prefWidth="100"/>
                <ColumnConstraints hgrow="ALWAYS" minWidth="200"/>
            </columnConstraints>

            <children>

                <Label text="Ident:" GridPane.rowIndex="0"/>
                <TextField fx:id="identField" promptText="e.g. KPIT"
                           onAction="#handleSearch" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                <Label text="IATA code:" GridPane.rowIndex="1"/>
                <TextField fx:id="iataField"  promptText="e.g. PIT"
                           onAction="#handleSearch" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="Local code:" GridPane.rowIndex="2"/>
                <TextField fx:id="localField" promptText="e.g. PIT"
                           onAction="#handleSearch" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                <Separator GridPane.columnSpan="2" GridPane.rowIndex="3"/>


                <Label text="Type:" GridPane.rowIndex="4"/>
                <TextField fx:id="typeField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

                <Label text="Name:" GridPane.rowIndex="5"/>
                <TextField fx:id="nameField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

                <Label text="Elevation:" GridPane.rowIndex="6"/>
                <TextField fx:id="elevationField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

                <Label text="Country:" GridPane.rowIndex="7"/>
                <TextField fx:id="countryField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="7"/>

                <Label text="Region:" GridPane.rowIndex="8"/>
                <TextField fx:id="regionField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="8"/>

                <Label text="Municipality:" GridPane.rowIndex="9"/>
                <TextField fx:id="municipalityField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="9"/>

                <Button fx:id="searchButton" text="Search" onAction="#handleSearch"
                        GridPane.columnIndex="1" GridPane.rowIndex="10" GridPane.halignment="RIGHT"/>
            </children>
        </GridPane>
    </left>

    <center>
        <AnchorPane BorderPane.alignment="CENTER">
            <padding><Insets top="16" right="16" bottom="16" left="8"/></padding>
            <children>
                <WebView fx:id="mapView" prefWidth="520.0" prefHeight="360.0"
                         AnchorPane.topAnchor="0.0" AnchorPane.rightAnchor="0.0"
                         AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"/>
            </children>
        </AnchorPane>
    </center>
</BorderPane>
